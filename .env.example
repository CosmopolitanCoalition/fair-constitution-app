APP_NAME="Fair Constitution"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─── PostgreSQL + PostGIS ─────────────────────────────────────
# Service name 'postgres' resolves inside Docker network
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=fair_constitution
DB_USERNAME=fc_user
DB_PASSWORD=fc_password

# ─── Redis ───────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ─── Cache / Queue / Session ─────────────────────────────────
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ─── Mail (dev — use log driver so emails go to logs) ────────
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@fair-constitution.local"
MAIL_FROM_NAME="${APP_NAME}"

# ─── Vite ────────────────────────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
